<div class="row">
  <%#= render 'layouts/admin_nav' if current_user.role.name == "Admin" %>
  <div class="col-md-4">
  </div>
  <div class="col-md-4 col-md-bg">
    <div class="inital-regi-top">
      <div class="title-head"><%= get_message_heading %></div>
      <div class="story-description">
        <% @histories.each do |ph| %>
          <div class="row bordr-bottom">
            <h3 class="story-head"><%= link_to "#{ph.try(:title)}", prophent_message_path(ph) %></h3>
            <p class="stroy-sub-head">To: <%= ger_request_user(ph) %></p>
            <span class="story-data"><%= ph.user_request.try(:accepted_at) %></span>
          </div>
        <% end %>
        <%= will_paginate @histories, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>

<div class="row">
  <div id="menu-fotter">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <% unless current_user.admin? %>
        <div class="row menu-btn-top" style="text-align: center">
          <hr>
          <div class="col-md-4 col-sm-4 col-xs-4">
            <%= link_to  root_path, class: "menu-btn" do %>
              <i class="fa fa-home" aria-hidden="true"></i>
            <%end%>
          </div>
          <div class="col-md-4 col-sm-4 col-xs-4">
            <%= link_to  profile_path(get_user_name_or_email(current_user)), class: "menu-btn"  do %>
              <i class="fa fa-user-o" aria-hidden="true"></i>
            <%end%>
          </div>
          <div class="col-md-4 col-sm-4 col-xs-4">
            <%= link_to  prophent_messages_path, class: "menu-btn" do %>
              <i class="fa fa-file" aria-hidden="true"></i>
            <%end%>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4"></div>    
  </div>
</div>
