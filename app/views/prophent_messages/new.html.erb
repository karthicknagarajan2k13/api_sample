<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4 col-md-bg">
    <div class="inital-regi-top">
      <div class="title-head">The message</div>
        <div class="row">
          <div class="inital-con">
            <%= form_for(@prophent_message) do |f| %>
              <%= f.hidden_field :user_request_id, value: params[:request] %>
              <div class="message-type-content">
                <div class="form-group">
                  <!-- <label for="title">Title</label> -->
                  <%= f.text_field :title, class: "form-control", placeholder:"Title" %>
                </div>
                <div class="form-group">
                  <!-- <label for="message">Message</label> -->
                  <%= f.text_area :message, class: "form-control", rows: 5, placeholder:"Message" %>
                </div>
              <div class="form-group ">
                <%#= f.submit "Send", class: "btn-prophent btn-primary btn-lg btn-block " %>
                <button type="submit" class="btn-prophent btn-primary btn-lg btn-block ">Send</button>
              </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>
<div class="row">
  <div id="menu-fotter">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="row menu-btn-top" style="text-align: center">
        <div class="col-md-4 col-sm-4 col-xs-4">
          <%= link_to root_path, class: "menu-btn" do %>
             <i class="fa fa-home" aria-hidden="true"></i>
          <%end%>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-4">
          <%= link_to   profile_path(get_user_name_or_email(current_user)), class: "menu-btn"  do %>
            <i class="fa fa-user-o" aria-hidden="true"></i>
          <%end%>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-4">
          <%= link_to  prophent_messages_path, class: "menu-btn" do %>
             <i class="fa fa-file" aria-hidden="true"></i>
          <%end%>
        </div>
      </div>
    </div>
    <div class="col-md-4"></div>    
  </div>
</div>


