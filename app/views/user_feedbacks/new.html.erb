<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4 col-md-bg">
    <div class="inital-regi-top">
    <%= render partial: 'shared/error_messages', locals: {object: @feedback} %>
      <div class="title-head">Your feedback</div>
        <div class="row">
          <%= form_for [@message, @feedback] do |f| %>
            <div class="message-type-content">
              <div class="form-group">
                <%= f.text_area :message, class: "form-control", rows: 10 %>
              </div>
            </div>
            <div class="form-group message-send-btn">
              <%= f.submit "Send", class: "send-btn" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row menu-btn-top" style="text-align: center">
        <div class="col-md-4 col-sm-4 col-xs-4">
          <%= link_to "Home", root_path, class: "menu-btn" %>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-4">
          <%= link_to "Profile", profile_path(get_user_name_or_email(current_user)), class: "menu-btn" %>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-4">
          <%= link_to "Your stories", student_history_path, class: "menu-btn" %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>


